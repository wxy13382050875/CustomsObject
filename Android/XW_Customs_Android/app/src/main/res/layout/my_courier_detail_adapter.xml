<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="end"
    android:divider="@drawable/bottom_line_gray"
    >
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView

            android:id="@+id/tv_yearMonthDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022.05.16"
            android:textColor="#838383"
            android:lineSpacingExtra="2dp"
            android:textSize="10sp"
            android:textIsSelectable="true"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16:00"
            android:textColor="#838383"
            android:lineSpacingExtra="2dp"
            android:textSize="15sp"
            android:textIsSelectable="true"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- 上面的竖线 -->
        <View
            android:id="@+id/view_top_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-1dp"
            android:layout_weight="1"
            />
        <!-- 圆点 -->
        <ImageView
            android:id="@+id/iv_expres_spot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/icon_logistics_un_complete"
            />
        <!-- 竖线 -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="asdfasdfasd大事发生的苏打粉asdfasdfas阿斯蒂芬斯蒂芬阿萨德发达省份撒旦法"
            android:textColor="#838383"
            android:lineSpacingExtra="2dp"
            android:textSize="15sp"
            android:textIsSelectable="true"
            android:gravity="left|center"
            />
    </LinearLayout>
</LinearLayout>